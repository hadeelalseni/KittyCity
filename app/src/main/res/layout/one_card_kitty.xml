<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardLayout_height"
    app:cardElevation="@dimen/cardElevation">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/one_card_kitty_iv"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_cat"
            android:contentDescription="@string/kitty_image"/>

        <TextView
            android:id="@+id/one_card_kitty_tv"
            android:text="Kitty name"
            android:textColor="@color/BlackColor"
            android:textSize="@dimen/thirty_text_size"
            android:background="@color/colorText"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</android.support.v7.widget.CardView>